        function HoverSubject(element, hoverOn) {
          if(hoverOn) {
            $(element).addClass('pseudoHover');
          } else {
            $(element).removeClass('pseudoHover');
          }
          var start = $(element).attr("class").indexOf("subjectLevel") + 12;
          var end = $(element).attr("class").indexOf(" ", start);
          var oneLess = ((end != -1) ? $(element).attr("class").substring(start, end) : $(element).attr("class").substring(start)) - 1;
          if(oneLess >= 0) {
            HoverSubject($(element).parents(".subjectLine").find(".subjectLevel" + oneLess), hoverOn);
          }
        }

        function hashString(str){
          var hash = 0;
          if (str.length == 0) return hash;
          for (i = 0; i < str.length; i++) {
            char = str.charCodeAt(i);
            hash = ((hash<<5)-hash)+char;
            hash = hash & hash; // Convert to 32bit integer
          }
          return hash;
        }
