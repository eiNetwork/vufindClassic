            // You can also add preventDefault to remove the anchor behavior that makes the page jump
            e.preventDefault();

            // adjust this so the text is next to the tab (keep it inside the div though)
            var target = $(this).offset().top - $(".accordionButtonsLeft").offset().top;
            setTimeout( function() {
              var height = content.height();
              if( (target + height + 11) > $(".accordionButtonsLeft").height() ) {
                target = $(".accordionButtonsLeft").height() - height - 25;
              }
              content.css("margin-top", (target > 0) ? target : 0);
            }, 10);
          } else {
            // clear the buffer zone if we are in mobile layout
            content.css("margin-top", 0);
          }
