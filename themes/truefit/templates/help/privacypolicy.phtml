      <div class="panel panel-default listAccordion">
        <div class="panel-heading EIN-hide-t EIN-hide">
          <h4 class="panel-title">
            <a data-toggle="collapse" data-parent="#privacyAccordion" href="#privacy_general" class="collapsed" onclick="createCookie('lastPrivacySection','general')"><?=$this->transEsc('privacy_general')?><i class="fa fa-caret-down"></i><i class="fa fa-caret-up"></i></a>
