    // if they're trying to show the pin reset dialog, give it to them
    else if( window.location.href.toLowerCase().indexOf("/myresearch/pinreset") != -1 ) {
      Lightbox.addOpenAction( function() { 
        $('#modal').on('shown.bs.modal', function() { ToggleLoginModal(document.getElementById('loginModalReset')); });
      } );
      Lightbox.get('MyResearch','Login');
    }
    // if they're trying to show the register dialog, give it to them
    else if( window.location.href.toLowerCase().indexOf("/myresearch/getcard") != -1 ) {
      Lightbox.addOpenAction( function() { 
        $('#modal').on('shown.bs.modal', function() { ToggleLoginModal(document.getElementById('loginModalRegister')); });
      } );
      Lightbox.get('MyResearch','Login');
    }

    // bind events to the buttons
    $(".neSliderButton").each( function() { 
      $(this).css({"height":$(this).parent().css("height")});
      $(this).on("touchstart", function() { 
        $(this).addClass("noHover"); 
        $(this).focus();
        $(this).mouseenter();
      } );
      $(this).on("touchend", function() { 
        $(this).mouseout(); 
      } ); 
      $(this).on("click", function() { 
        if( $(this).hasClass("noHover") ) {
          $(this).mouseout(); 
        }
      } ); 
    } );
  } );
</script>
