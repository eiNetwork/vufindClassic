<? if ($this->pageCount && count($this->pagesInRange) > 1): ?>
  <ul class="pagination">
    <li<?=(($this->previous)?"":" class=\"disabled\"")?>><a href="<?=$this->currentPath() . $this->results->getUrlQuery()->setPage(1)?>"><i class="fa fa-angle-double-left"></i></a></li>
    <li<?=(($this->previous)?"":" class=\"disabled\"")?>><a href="<?=$this->currentPath() . $this->results->getUrlQuery()->setPage($this->previous)?>"><i class="fa fa-angle-left"></i></a></li>
    <? foreach ($this->pagesInRange as $page): ?>
      <? if ($page != $this->current): ?>
        <li><a href="<?=$this->currentPath() . $this->results->getUrlQuery()->setPage($page)?>"><?=$page?></a></li>
      <? else: ?>
        <li class="active"><span><?=$page?></span></li>
      <? endif; ?>
    <? endforeach; ?>
    <li<?=(($this->next)?"":" class=\"disabled\"")?>><a href="<?=$this->currentPath() . $this->results->getUrlQuery()->setPage($this->next)?>"><i class="fa fa-angle-right"></i></a></li>
    <li<?=(($this->next)?"":" class=\"disabled\"")?>><a href="<?=$this->currentPath() . $this->results->getUrlQuery()->setPage($this->pageCount)?>"><i class="fa fa-angle-double-right"></i></a></li>
  </ul>
<? endif; ?>